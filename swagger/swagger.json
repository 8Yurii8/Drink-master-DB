    },
    "/api/own": {
      "get": {
        "summary": "Get all own recipes",
        "tags": ["Own"],
        "security": [
          {
            "Bearer": []
          }
        ],
        "requestBody": {
          "description": "User token, User id",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AllOwnRecipesRequest"
