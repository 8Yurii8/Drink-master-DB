              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)"
          },
          "401": {
            "description": "Unauthorized (invalid credentials)"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/own/:recipeId": {
      "delete": {
        "summary": "Delete own recipe",
        "tags": ["Own"],
        "security": [
          {
            "Bearer": []
          }
        ],
