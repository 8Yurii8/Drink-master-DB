    "/api/search": {
      "get": {
        "summary": "Search recipes by name, category, ingredient",
        "tags": ["Recepi"],
        "security": [
          {
            "Bearer": []
          }
        ],
        "requestBody": {
          "description": "name, category, ingredient",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SearchRequest"
              }
